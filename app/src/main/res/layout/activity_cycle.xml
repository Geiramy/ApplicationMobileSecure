<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CycleActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCycleRetour" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:text="@string/textCycleRetour"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCycleLog" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCycleRetour" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.92"
            android:textAlignment="textStart" tools:text="test"/>
    <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:name="com.example.fil_rouge.MyFirstFragment"
            android:id="@+id/fragment"
            app:layout_constraintStart_toEndOf="@+id/btnCycleRetour" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_my_first"/>
</android.support.constraint.ConstraintLayout>